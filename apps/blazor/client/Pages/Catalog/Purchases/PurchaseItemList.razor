<!-- Item List Section -->
<MudPaper Class="pa-2 mb-2" Style="max-height: 80vh; overflow-y: auto;">
    <MudText Typo="Typo.body1" Class="mb-2">Purchase Items - @(Items?.Count ?? 0)</MudText>

    <MudTable T="PurchaseItemDto"
              Items="Items"
              Hover
              Breakpoint="Breakpoint.Sm"
              Dense="true"
              Class="th-border-separator"
              Style="font-size: 0.875rem;">

        <HeaderContent>
            <MudTh Style="width: 400px; padding: 8px;">Product</MudTh>
            <MudTh Style="width: 70px; padding: 8px;">Qty</MudTh>
            <MudTh Style="width: 100px; padding: 8px;">Unit Price</MudTh>
            <MudTh Style="padding: 8px;">Amount</MudTh>
            <MudTh Style="padding: 8px;">Status</MudTh>
            <MudTh Style="padding: 8px;">Actions</MudTh>
        </HeaderContent>

        <RowTemplate Context="item">
            @if (item == EditingItem)
            {
                <MudTd Style="width: 400px; padding: 4px;">
                    <MudSelect T="Guid?" @bind-Value="item.ProductId" Dense Style="width: 100%; font-size: 0.875rem;" Variant="Variant.Outlined" Margin="Margin.Dense">
                        @foreach (var product in Products)
                        {
                            <MudSelectItem T="Guid?" Value="product.Id"
                                           Style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; display: block; font-size: 0.875rem;">
                                @product.Name
                            </MudSelectItem>
                        }
                    </MudSelect>
                </MudTd>
                <MudTd Style="width: 70px; padding: 4px;">
                    <MudTextField T="int" @bind-Value="item.Qty" Immediate Variant="Variant.Outlined" Dense Margin="Margin.Dense" Style="font-size: 0.875rem;" />
                </MudTd>
                <MudTd Style="width: 100px; padding: 4px;">
                    <MudTextField T="double" @bind-Value="item.UnitPrice" Variant="Variant.Outlined" Dense Margin="Margin.Dense" Style="font-size: 0.875rem;" />
                </MudTd>
                <MudTd Style="padding: 4px;">
                    @{
                        var newAmount = item.Qty * item.UnitPrice;
                    }

                    <MudText Style="font-size: 0.875rem;">@newAmount.ToString("N2")</MudText>
                </MudTd>
                <MudTd Style="padding: 4px;">
                    <MudSelect T="PurchaseStatus" @bind-Value="item.ItemStatus" Dense Variant="Variant.Outlined" Margin="Margin.Dense" Style="font-size: 0.875rem;">
                        @foreach (var status in PurchaseStatusList)
                        {
                            <MudSelectItem T="PurchaseStatus" Value="status">@GetDisplayName(status)</MudSelectItem>
                        }
                    </MudSelect>
                </MudTd>
                <MudTd class="text-center" Style="padding: 4px;">
                    <div class="d-flex justify-center gap-1">
                        <MudTooltip Text="Save Changes">
                            <MudIconButton Icon="@Icons.Material.Filled.Check"
                                           Color="Color.Success"
                                           Size="Size.Small"
                                           OnClick="@(async () => await SaveEdit())" />
                        </MudTooltip>
                        <MudTooltip Text="Cancel Edit">
                            <MudIconButton Icon="@Icons.Material.Filled.Close"
                                           Color="Color.Secondary"
                                           Size="Size.Small"
                                           OnClick="@(() => CancelEdit())" />
                        </MudTooltip>
                    </div>
                </MudTd>
            }
            else
            {
                <MudTd Style="width: 400px; padding: 4px;">
                    @{
                        var product = Products?.FirstOrDefault(p => p.Id == item.ProductId);
                    }
                    <span style="display: block; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; font-size: 0.875rem;">
                        @(product is not null ? product.Name : "—")
                    </span>
                </MudTd>
                <MudTd Style="width: 70px; padding: 4px; font-size: 0.875rem;">@item.Qty.ToString("N0")</MudTd>
                <MudTd Style="width: 100px; padding: 4px; font-size: 0.875rem;">@item.UnitPrice.ToString("N2")</MudTd>
                <MudTd Style="padding: 4px;">
                    @{
                        var newAmount = item.Qty * item.UnitPrice;
                    }
                    <span style="font-size: 0.875rem;">@newAmount.ToString("N2")</span>
                </MudTd>
                <MudTd DataLabel="Status" Style="padding: 4px; font-size: 0.875rem;">@item.ItemStatus</MudTd>
                <MudTd class="text-center" Style="padding: 4px;">
                    <div class="d-flex justify-center gap-1">
                        <MudTooltip Text="Edit Item">
                            <MudIconButton Icon="@Icons.Material.Filled.Edit"
                                           Color="Color.Primary"
                                           Size="Size.Small"
                                           OnClick="@(() => EditItem(item))" />
                        </MudTooltip>
                        <MudTooltip Text="Delete Item">
                            <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                           Color="Color.Error"
                                           Size="Size.Small"
                                           OnClick="@(async () => await RemoveItem(item))" />
                        </MudTooltip>
                    </div>
                </MudTd>
            }
        </RowTemplate>
       
        <FooterContent>
            <MudTd Style="width: 400px; padding: 4px;">
                <MudSelect T="Guid?" @bind-Value="Productid" Dense Style="width: 100%; font-size: 0.875rem;" Placeholder="Select Product Here" Variant="Variant.Outlined" Margin="Margin.Dense">
                    @foreach (var product in Products)
                    {
                        <MudSelectItem T="Guid?" Value="product.Id"
                                       Style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; display: block; font-size: 0.875rem;">
                            @product.Name
                        </MudSelectItem>
                    }
                </MudSelect>
            </MudTd>

            @if (Productid != null)
            {
                <MudTd Style="width: 70px; padding: 4px;">
                    <MudNumericField HideSpinButtons T="int" @bind-Value="Qty" Variant="Variant.Outlined" Dense Margin="Margin.Dense" Style="font-size: 0.875rem;" />
                </MudTd>
                <MudTd Style="width: 100px; padding: 4px;">
                    <MudNumericField HideSpinButtons T="double" @bind-Value="Unitprice" Variant="Variant.Outlined" Dense Margin="Margin.Dense" Style="font-size: 0.875rem;" />
                </MudTd>
                <MudTd Style="padding: 4px;">
                    @{
                        var newAmount = Qty * Unitprice;
                    }
                    <MudTextField T="string" Value="@newAmount.ToString("N2")" ReadOnly Label="Auto Compute" Variant="Variant.Outlined" Dense Margin="Margin.Dense" Style="font-size: 0.875rem;" />
                </MudTd>
                <MudTd Style="padding: 4px;">
                    <MudTextField T="string" Value="@GetDisplayName(Status ?? PurchaseStatus.Pending)" ReadOnly Variant="Variant.Outlined" Dense Margin="Margin.Dense" Style="font-size: 0.875rem;" />
                </MudTd>

                <MudTd class="text-center" Style="padding: 4px;">
                    <MudTooltip Text="Add Item">
                        <MudIconButton Icon="@Icons.Material.Filled.AddCircleOutline"
                                       Color="Color.Primary"
                                       Size="Size.Small"
                                       OnClick="@(async () => await AddNewItem())" />
                    </MudTooltip>
                </MudTd>
            }
            else
            {
                <MudTd colspan="4"></MudTd> @* Empty columns to maintain layout *@
            }
            
        </FooterContent>

    </MudTable>
</MudPaper>

<MudPaper Class="pa-2 mt-2" Outlined>
    <MudText Typo="Typo.body2" Class="mb-1">Purchase Items Summary</MudText>
    <MudGrid GutterSize="8">
        <MudItem xs="12" sm="4">
            <MudText Typo="Typo.body2" Style="font-size: 0.875rem;">Total Items: @Items.Count</MudText>
        </MudItem>
        <MudItem xs="12" sm="4">
            <MudText Typo="Typo.body2" Style="font-size: 0.875rem;">Total Quantity: @Items.Sum(i => i.Qty)</MudText>
        </MudItem>
        <MudItem xs="12" sm="4">
            <MudText Typo="Typo.body2" Style="font-size: 0.875rem;">Total Amount: @Items.Sum(i => i.Qty * i.UnitPrice).ToString("C", System.Globalization.CultureInfo.CurrentCulture)</MudText>
        </MudItem>
    </MudGrid>
</MudPaper>
