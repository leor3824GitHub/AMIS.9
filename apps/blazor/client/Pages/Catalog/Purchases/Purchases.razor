@page "/catalog/purchases"

@using AMIS.Blazor.Client.Components
@using AMIS.Shared.Authorization
@using Microsoft.AspNetCore.Authorization
@using System.Globalization

<PageHeader Title="Purchases" Header="Purchases" SubHeader="Manage and track purchases" />

<style>
    .purchase-row {
        transition: background-color 0.2s ease;
    }

    .purchase-row--pending {
        background-color: rgba(255, 193, 7, 0.1);
    }

    .purchase-row--risk {
     background-color: rgba(255, 86, 48, 0.12);
    }

    .purchase-row--critical {
        background-color: rgba(211, 47, 47, 0.18);
    }
</style>

<MudPaper Class="pa-4 mb-4">
    <MudStack Row="true" Spacing="2" Class="mb-0">
        @if (_canSearch)
        {
            <MudTextField T="string"
                          ValueChanged="@(s => OnSearch(s))"
                          Placeholder="Search by supplier, reference, or status..."
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search"
                          Variant="Variant.Outlined"
                          Immediate="true"
                          Disabled="@_loading" />
        }
        <MudSpacer />
        <MudButton Variant="Variant.Outlined"
                   Color="Color.Secondary"
                   Disabled="@_loading"
                   OnClick="@OnRefresh"
                   StartIcon="@Icons.Material.Filled.Refresh">Refresh</MudButton>

        @if (_canCreate)
        {
            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       Disabled="@_loading"
                       OnClick="OnCreate"
                       StartIcon="@Icons.Material.Filled.Add">New Purchase</MudButton>
            <MudButton Variant="Variant.Outlined"
                       Color="Color.Primary"
                       Disabled="@(_selectedItems.Count != 1 || _loading)"
                       OnClick="OnClone"
                       StartIcon="@Icons.Material.Filled.ContentCopy">Clone Selected</MudButton>
        }

        @if (_canDelete)
        {
            <MudButton Variant="Variant.Filled"
                       Color="Color.Error"
                       Disabled="@(_selectedItems.Count == 0)"
                       OnClick="OnDeleteChecked"
                       StartIcon="@Icons.Material.Filled.Delete">Delete Selected</MudButton>
        }
    </MudStack>
</MudPaper>

<MudDataGrid T="PurchaseResponse" ServerData="ServerReload"
             MultiSelection="true"
             @bind-SelectedItems="_selectedItems"
             @bind-SelectedItem="_currentDto"
             ColumnResizeMode="ResizeMode.Column"
             Hover="true"
             Dense="true"
             Bordered="true"
             Striped="true"
             Loading="@_loading"
             @ref="_table"
             Outlined
             RowStyleFunc="RowStyle">
    

    <Columns>
    <SelectColumn T="PurchaseResponse" />

             <TemplateColumn T="PurchaseResponse" Title="Supplier">
                 <CellTemplate Context="context">
                            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                                    <MudIcon Icon="@Icons.Material.Filled.Business" Size="Size.Small" Color="Color.Primary" />
                                    <MudText Typo="Typo.body2" Style="font-weight: 500;">@((context.Item.Supplier?.Name) ?? "--")</MudText>
                            </MudStack>
                 </CellTemplate>
             </TemplateColumn>

        <TemplateColumn T="PurchaseResponse" Title="Purchase Date">
            <CellTemplate Context="context">
                <MudStack Row="false" Spacing="0">
                    <MudText Typo="Typo.body2" Style="font-weight: 500;">
                        @(context.Item.PurchaseDate.HasValue ? context.Item.PurchaseDate.Value.ToString("MMM dd, yyyy", CultureInfo.CurrentCulture) : "N/A")
                    </MudText>
                    @if (context.Item.PurchaseDate.HasValue)
                    {
                        <MudText Typo="Typo.caption" Color="Color.Default" Style="opacity: 0.7;">
                            @GetRelativeDateText(context.Item.PurchaseDate.Value)
                        </MudText>
                    }
                </MudStack>
            </CellTemplate>
        </TemplateColumn>

        <PropertyColumn Property="p => p.TotalAmount"
        Title="Total Amount"
               Sortable
="true">
     <CellTemplate>
 @if (context.Item.TotalAmount.HasValue)
           {
    <MudText Typo="Typo.body2">
 @context.Item.TotalAmount.Value.ToString("C2", CultureInfo.CurrentCulture)
        </MudText>
       }
      </CellTemplate>
            </PropertyColumn>

        <TemplateColumn T="PurchaseResponse" Title="Status">
      <CellTemplate Context="context">
    <MudChip T="string" Color="@GetStatusChipColor(context.Item.Status)"
           Variant="Variant.Filled"
         Icon="@GetStatusIcon(context.Item.Status)">
  @GetStatusDisplay(context.Item.Status)
    </MudChip>
            </CellTemplate>
        </TemplateColumn>

        <TemplateColumn T="PurchaseResponse" Title="Actions" Sortable="false">
            <CellTemplate Context="context">
                <MudMenu Icon="@Icons.Material.Filled.MoreVert" Dense="true" Size="Size.Small">
                    @if (_canUpdate)
                    {
                        <MudMenuItem OnClick="@(() => OnEdit(context.Item))">
                            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                                <MudIcon Icon="@Icons.Material.Filled.Edit" Size="Size.Small" Color="Color.Primary" />
                                <MudText>Edit</MudText>
                            </MudStack>
                        </MudMenuItem>
                    }
                    @if (_canDelete)
                    {
                        <MudMenuItem OnClick="@(() => OnDelete(context.Item))">
                            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                                <MudIcon Icon="@Icons.Material.Filled.Delete" Size="Size.Small" Color="Color.Error" />
                                <MudText>Delete</MudText>
                            </MudStack>
                        </MudMenuItem>
                    }
                </MudMenu>
            </CellTemplate>
        </TemplateColumn>
    </Columns>

    

    <PagerContent>
        <MudDataGridPager PageSizeOptions="new int[] { 10, 25, 50 }" />
    </PagerContent>
</MudDataGrid>

