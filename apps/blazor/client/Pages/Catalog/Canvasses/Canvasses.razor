@page "/catalog/canvasses"
@using AMIS.Blazor.Infrastructure.Api
@using AMIS.Blazor.Client.Components
@inject IApiClient ApiClient
@inject ISnackbar Snackbar
@using MudBlazor

<PageHeader Title="Canvasses" Header="Supplier Quotations" SubHeader="Review and award supplier quotations" />

<MudPaper Class="pa-4">
    <MudStack Row="true" Spacing="2" Class="mb-4">
        <MudTextField T="string" ValueChanged="@(s => OnSearch(s))" Placeholder="Search (supplier, item...)"
            Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" Variant="Variant.Outlined" />
        <MudSpacer />
        <MudButton Variant="Variant.Outlined" Color="Color.Secondary" OnClick="OnRefresh"
            StartIcon="@Icons.Material.Filled.Refresh">Refresh</MudButton>
    </MudStack>

    <MudDataGrid ServerData="ServerReload" T="CanvassResponse" @bind-SelectedItem="_current" Hover="true" Dense="true"
        Bordered="true" Striped="true" Loading="@_loading" @ref="_table">
        <Columns>
            <PropertyColumn Property="x => x.ItemDescription" Title="Item" />
            <PropertyColumn Property="x => x.Quantity" Title="Qty" />
            <PropertyColumn Property="x => x.Unit" Title="Unit" />
            <PropertyColumn Property="x => x.QuotedPrice" Title="Price" />
            <TemplateColumn Title="Selected" Sortable="false">
                <CellTemplate>
                    @if (context.Item.IsSelected)
                    {
                        <MudIcon Icon="@Icons.Material.Filled.Star" Color="Color.Warning" />
                    }
                    else
                    {
                        <MudIcon Icon="@Icons.Material.Filled.StarBorder" Color="Color.Default" />
                    }
                </CellTemplate>
            </TemplateColumn>
            <TemplateColumn Title="Actions" Sortable="false">
                <CellTemplate>
                    <MudMenu Icon="@Icons.Material.Filled.MoreVert" Dense Size="Size.Small">
                        <MudMenuItem Disabled="@context.Item.IsSelected" OnClick="@(() => OnAward(context.Item))">
                            <MudStack Row AlignItems="AlignItems.Center" Spacing="1">
                                <MudIcon Icon="@Icons.Material.Filled.EmojiEvents" Size="Size.Small"
                                    Color="Color.Success" />
                                <MudText>Award</MudText>
                            </MudStack>
                        </MudMenuItem>
                    </MudMenu>
                </CellTemplate>
            </TemplateColumn>
        </Columns>
        <PagerContent>
            <MudDataGridPager />
        </PagerContent>
    </MudDataGrid>
</MudPaper>

@code {
    private MudDataGrid<CanvassResponse>? _table;
    private bool _loading;
    private string? _keyword;
    private CanvassResponse? _current;

    private async Task OnAward(CanvassResponse item)
    {
        try
        {
            _loading = true;
            var resp = await ApiClient.AwardCanvassEndpointAsync("1", item.Id);
            Snackbar.Add("Canvass awarded successfully", Severity.Success);
            await _table!.ReloadServerData();
        }
        catch (ApiException ex)
        {
            Snackbar.Add($"Award failed: {ex.Message}", Severity.Error);
        }
        finally { _loading = false; }
    }

    private void OnSearch(string keyword)
    {
        _keyword = keyword;
        _ = _table?.ReloadServerData();
    }

    private async Task<GridData<CanvassResponse>> ServerReload(GridState<CanvassResponse> state)
    {
        _loading = true;
        try
        {
            var cmd = new SearchCanvassesCommand
            {
                Keyword = _keyword,
                PageNumber = state.Page + 1,
                PageSize = state.PageSize,
                OrderBy = new List<string>()
            };
            var result = await ApiClient.SearchCanvassesEndpointAsync("1", cmd);
            return new GridData<CanvassResponse> { Items = result.Items.ToList(), TotalItems = result.TotalCount };
        }
        catch (ApiException ex)
        {
            Snackbar.Add($"Load failed: {ex.Message}", Severity.Error);
            return new GridData<CanvassResponse> { Items = new List<CanvassResponse>(), TotalItems = 0 };
        }
        finally { _loading = false; }
    }

    private void OnRefresh() => _ = _table?.ReloadServerData();
}