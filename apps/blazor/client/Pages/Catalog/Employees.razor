@page "/catalog/employees"

<PageHeader Title="Employees" Header="Employees" SubHeader="Manage your Employees." />

<EntityTable @ref="_table" TEntity="EmployeeResponse" TId="Guid" TRequest="EmployeeViewModel" Context="@Context">

    <AdvancedSearchContent>
        <!-- Add any advanced search content here if needed -->
    </AdvancedSearchContent>

    <EditFormContent>
        @if (!Context.AddEditModal.IsCreate)
        {
            <MudItem xs="12" md="6">
                <MudTextField Value="context.Id" Underline=false ReadOnly Label="Employee Id" />
            </MudItem>
        }
        <MudItem xs="12" md="6">
            <MudTextField Label="Name" For="@(() => context.Name)" @bind-Value="context.Name" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField Label="Designation" For="@(() => context.Designation)" @bind-Value="context.Designation" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField Label="ResponsibilityCode" For="@(() => context.ResponsibilityCode)" @bind-Value="context.ResponsibilityCode" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField Label="UserId" For="@(() => context.UserId)" @bind-Value="context.UserId" />
        </MudItem>
