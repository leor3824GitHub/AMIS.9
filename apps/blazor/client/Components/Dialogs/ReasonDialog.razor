@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="_reason" Label="@Label" Placeholder="@Placeholder" Lines="3"
            Variant="Variant.Outlined" Margin="Margin.Dense" FullWidth="true" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Submit</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public string Label { get; set; } = "Reason";
    [Parameter] public string Placeholder { get; set; } = "Enter reason...";

    private string _reason = string.Empty;

    void Cancel() => MudDialog.Cancel();
    void Submit() => MudDialog.Close(DialogResult.Ok(_reason));
}